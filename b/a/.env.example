# Environment Configuration
NODE_ENV=development
PORT=3001

# MongoDB Configuration
# Para uso local sem Docker:
MONGODB_URI=mongodb://localhost:27017/jwt-auth-db

# Para uso com Docker (usando nome do serviço):
# MONGODB_URI=mongodb://mongodb:27017/jwt-auth-db

# Para produção (MongoDB Atlas):
MONGODB_URI_PRODUCTION=mongodb+srv://username:password@cluster.mongodb.net/jwt-auth-db?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-32-characters
JWT_EXPIRES_IN=24h

# Bcrypt Configuration
BCRYPT_SALT_ROUNDS=12
