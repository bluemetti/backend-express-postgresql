# Environment Configuration
NODE_ENV=development
PORT=3001

# PostgreSQL Configuration LOCAL
DB_TYPE=postgres
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres123
DB_DATABASE=jwt_auth_db

# PostgreSQL PRODUCTION (Neon, Supabase, Render, etc)
# Obtenha em: Neon.tech, Supabase.com, Render.com
# Formato: postgresql://username:password@host:5432/database?sslmode=require
DATABASE_URL=postgresql://username:password@host.provider.com:5432/jwt_auth_db?sslmode=require

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-32-characters
JWT_EXPIRES_IN=24h

# Bcrypt Configuration
BCRYPT_SALT_ROUNDS=12
